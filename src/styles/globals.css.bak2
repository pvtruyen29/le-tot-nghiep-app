/* src/styles/globals.css */
@import url('https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap');

/* --- BIẾN MÀU VÀ THIẾT LẬP CƠ BẢN --- */
:root {
  --primary-color: #004a99; /* Xanh đậm CTU */
  --secondary-color: #007bff; /* Xanh dương sáng hơn */
  --accent-color: #ffc107; /* Vàng */
  --text-color: #333;
  --light-gray: #f4f4f4;
  --border-color: #ddd;
  --white-color: #fff;
  --danger-color: #dc3545;
  --success-color: #28a745;
}

html,
body {
  padding: 0;
  margin: 0;
  font-family: 'Roboto', sans-serif;
  background-color: #f9fafb;
  color: var(--text-color);
}

a { color: inherit; text-decoration: none; }
* { box-sizing: border-box; }

.container {
  max-width: 1200px;
  margin: 0 auto;
  padding: 0 1rem;
}

/* --- BANNER CHÍNH --- */
.hero-banner {
  background: linear-gradient(135deg, var(--primary-color), var(--secondary-color));
  color: var(--white-color);
  text-align: center;
  padding: 3rem 1rem;
  border-radius: 0 0 16px 16px;
  margin-bottom: 2rem;
  box-shadow: 0 4px 15px rgba(0, 74, 153, 0.2);
}
.hero-logo { width: 80px; height: auto; margin-bottom: 1rem; }
.hero-banner h1 { margin: 0; font-size: 2.5rem; font-weight: 700; }

/* --- KHỐI ĐĂNG NHẬP/ĐĂNG XUẤT --- */
.login-status { margin-top: 1.5rem; padding-top: 1.5rem; border-top: 1px solid rgba(255, 255, 255, 0.2); }
.login-status p { margin: 0 0 0.5rem 0; font-weight: 500; }
.login-btn, .logout-btn { border: none; padding: 10px 20px; border-radius: 8px; cursor: pointer; font-weight: 700; transition: transform 0.2s; }
.login-btn:hover, .logout-btn:hover { transform: translateY(-2px); }
.login-btn { background-color: var(--white-color); color: var(--primary-color); }
.logout-btn { background-color: var(--danger-color); color: white; }

/* --- NÚT XEM LỊCH TOÀN TRƯỜNG --- */
.schedule-link-container { text-align: center; margin-bottom: 2.5rem; }
.schedule-link-button { display: inline-block; background-color: var(--success-color); color: white; padding: 12px 24px; border-radius: 8px; font-weight: 700; box-shadow: 0 2px 5px rgba(0,0,0,0.1); transition: all 0.2s ease-in-out; }
.schedule-link-button:hover { transform: translateY(-2px); box-shadow: 0 4px 10px rgba(0,0,0,0.15); }


/* --- DANH SÁCH SỰ KIỆN --- */
/* ... các style khác ... */

.event-card-detailed {
  /* ... */
  display: flex;
  flex-direction: row; 
}

/* Đảm bảo div này có position: relative */
.event-card-image-wrapper {
  position: relative;
  flex: 0 0 300px; 
}
.event-card-image { 
  position: absolute; 
  top: 0; 
  left: 0; 
  width: 100%; 
  height: 100%; 
  object-fit: cover; 
}

/* Đây là style cho icon ngày tháng */
.event-card-date {
  position: absolute;
  top: 1rem;
  left: 1rem;
  background-color: var(--white-color);
  color: var(--text-color);
  border-radius: 8px;
  width: 60px;
  text-align: center;
  font-weight: 700;
  box-shadow: 0 2px 5px rgba(0,0,0,0.15);
  display: flex;
  flex-direction: column;
  z-index: 10; /* Đảm bảo nó nằm trên ảnh */
}
.event-card-date .month {
  background-color: var(--danger-color);
  color: white;
  padding: 4px 0;
  border-radius: 8px 8px 0 0;
  font-size: 0.8rem;
}
.event-card-date .day {
  padding: 8px 0;
  font-size: 1.8rem;
  line-height: 1;
}

/* --- DANH SÁCH SỰ KIỆN (LAYOUT MỚI) --- */
.event-grid-detailed { display: grid; gap: 2rem; }

.event-card-detailed {
  background-color: var(--white-color);
  border-radius: 12px;
  overflow: hidden;
  box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
  display: flex;
  flex-direction: row; /* SỬA LỖI: Chuyển sang chiều ngang */
  transition: transform 0.2s, box-shadow 0.2s;
}
.event-card-detailed:hover { transform: translateY(-5px); box-shadow: 0 8px 25px rgba(0, 0, 0, 0.1); }

.event-card-image-wrapper {
  position: relative;
  flex: 0 0 300px; /* Cố định chiều rộng của ảnh */
}
.event-card-image { position: absolute; top: 0; left: 0; width: 100%; height: 100%; object-fit: cover; }

.event-card-date { /* Giữ nguyên */ }
.event-info { padding: 1.5rem; display: flex; flex-direction: column; flex-grow: 1; }
.event-info h3 { margin: 0 0 1rem 0; font-size: 1.5rem; color: var(--primary-color); }
.info-grid { display: grid; gap: 0.75rem; margin-bottom: 1rem; }
.info-item { margin: 0; font-size: 0.95rem; color: #555; }
.register-btn { background-color: var(--secondary-color); color: white; border: none; padding: 12px; border-radius: 8px; font-weight: 700; font-size: 1rem; cursor: pointer; margin-top: auto; transition: background-color 0.2s; }
.register-btn:hover { background-color: var(--primary-color); }



/* --- MODAL (POPUP) --- */
.modal-backdrop { /* Giữ nguyên */ }
.modal-content { /* Giữ nguyên */ }
.modal-large { max-width: 1000px; }
.modal-title { /* Giữ nguyên */ }
.form-box { padding: 1.5rem; }
/* ... các style modal khác ... */

/* --- BỐ CỤC 2 CỘT TRONG POPUP ĐĂNG KÝ (SỬA LỖI) --- */
.modal-grid-register {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 2.5rem;
  margin-bottom: 1.5rem;
  padding: 1rem;
}
.modal-col-right { display: flex; flex-direction: column; }

/* KHUNG ẢNH CỐ ĐỊNH */
.crop-container-fixed { position: relative; width: 100%; height: 400px; background-color: #f0f0f0; border-radius: 8px; overflow: hidden; display: flex; justify-content: center; align-items: center; }
.crop-container-fixed .ReactCrop { max-height: 400px; }
.crop-container-fixed .ReactCrop img { max-height: 400px; object-fit: contain; }
.crop-container-fixed > label { position: absolute; top: 10px; left: 10px; background-color: rgba(0,0,0,0.5); color: white; padding: 4px 8px; border-radius: 4px; font-size: 0.9rem; }
.crop-container-fixed .btn-crop-main { position: absolute; bottom: 10px; left: 50%; transform: translateX(-50%); width: 90%; }

/* Nút Cắt ảnh nổi bật */
.btn-crop-main { padding: 10px; font-size: 1rem; font-weight: 700; cursor: pointer; border: none; border-radius: 8px; background-color: var(--accent-color); color: var(--text-color); transition: background-color 0.2s; }
.btn-crop-main:hover { background-color: #ffb300; }

/* Placeholder khi chưa chọn ảnh */
.placeholder-image { display: flex; justify-content: center; align-items: center; text-align: center; width: 100%; height: 100%; min-height: 400px; border: 2px dashed #ccc; border-radius: 8px; color: #aaa; font-size: 1rem; padding: 1rem; box-sizing: border-box; }

/* Khung xem trước ảnh */
.preview-container { margin-top: 1rem; }
.preview-frame { width: 150px; border: 2px solid var(--border-color); border-radius: 8px; overflow: hidden; }
.preview-frame img { width: 100%; display: block; }

/* HƯỚNG DẪN ẢNH */
.photo-guidelines { /* Giữ nguyên */ }

/* THÔNG BÁO */
.message-fullwidth { /* Giữ nguyên */ }

/* --- RESPONSIVE --- */
@media (max-width: 900px) {
  .modal-grid-register {
    grid-template-columns: 1fr; /* Chuyển về 1 cột */
  }
}

@media (max-width: 768px) {
  .hero-banner h1 { font-size: 2rem; }
  .event-card-detailed {
    flex-direction: column; /* SỬA LỖI: Chuyển về chiều dọc trên mobile */
  }
  .event-card-image-wrapper {
    flex-basis: auto; /* Reset lại chiều rộng ảnh */
    width: 100%;
    padding-top: 56.25%; /* Dùng lại tỷ lệ 16:9 cho mobile */
  }
}
